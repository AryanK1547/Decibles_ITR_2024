<!-- res/drawable/progress.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <corners android:radius="15dp"/> <!-- Make the corners rounded -->
            <solid android:color="#232323"/> <!-- Background color -->
            <size android:height="2sp"/> <!-- Adjust height as needed -->
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape android:shape="rectangle">
                <corners android:radius="15dp"/> <!-- Make the corners rounded -->
                <solid android:color="@color/red"/> <!-- Secondary progress color -->
                <size android:height="2sp"/> <!-- Adjust height as needed -->
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <corners android:radius="15dp"/> <!-- Make the corners rounded -->
                <solid android:color="@color/red"/> <!-- Progress color -->
                <size android:height="2sp"/> <!-- Adjust height as needed -->
            </shape>
        </clip>
    </item>
</layer-list>
