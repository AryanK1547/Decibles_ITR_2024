<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SearchFragment"
    android:background="@color/black"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    >
    <androidx.cardview.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/cvLoginCrd"
      app:cardElevation="24dp"
      app:cardCornerRadius="30dp"
      app:cardBackgroundColor="@color/white"
      android:layout_gravity="center"
      android:layout_marginStart="20dp"
     android:layout_marginEnd="20dp"

        >
      <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">
      <EditText
          android:id="@+id/etSearchInput"
          android:background="@null"
          android:layout_width="250dp"
          android:layout_height="wrap_content"
          android:layout_margin="10dp"
          android:textColor="@color/black"
          android:textStyle="bold"
          android:hint="Search Something Here..."
          android:textSize="15sp"
          android:inputType="textImeMultiLine|textMultiLine"
          android:padding="10dp"
          android:paddingStart="15dp"
          android:paddingEnd="15dp"
          />
            <ImageView
                android:id="@+id/ivSearchMic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src='@drawable/receiver_mic_asset'/>
            <ImageView
                android:id="@+id/ivSearchSearchInfobtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src='@drawable/v_search_empty'
                android:layout_marginLeft="10sp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id='@+id/tvSearchTextSeaching'
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:gravity="center"
        android:textSize="15dp"
         android:layout_marginTop="10sp">
    </TextView>
</LinearLayout>