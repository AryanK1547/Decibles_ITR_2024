<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/home_fragment"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:scrollbars="none">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:background="@android:color/transparent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Album Art -->
            <ImageView
                android:id="@+id/album_art"
                android:layout_width="350dp"
                android:layout_height="350dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/cover_one"
                android:contentDescription="Hello"
                android:layout_gravity="center_horizontal"
                
                />

            <!-- Track Title -->
            <TextView
                android:id="@+id/track_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:text="@string/india_s_classical"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:textStyle="bold"
                android:gravity="center"
                />

            <!-- Artist Name -->
            <TextView
                android:id="@+id/artist_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/aryan_khode"
                android:textColor="@color/yellow"
                android:textSize="18sp"
                android:gravity="center"

                android:layout_marginTop="8dp"/>

            <!-- Volume Control -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="16dp">

                <SeekBar
                    android:id="@+id/volume_seekbar"
                    android:layout_width="150dp"
                    android:layout_height="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="12dp"

                    android:progressDrawable="@drawable/progress_seekbar"
                    android:thumb="@drawable/thumb_seekbar_color"
                    android:max="100"
                    android:progress="100"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/song_volume_button"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/volume_asset_white"
                    android:clickable="true"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvInitialTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00"
                    android:textColor="@color/white"
                    android:layout_marginTop="30dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvTotalTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="00:00"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Playback Progress -->
            <SeekBar
                android:id="@+id/playback_seekbar"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="5dp"
                android:progressDrawable="@drawable/progress_seekbar"
                android:thumb="@drawable/thumb_seekbar_color"/>

            <!-- Playback Controls -->
            <LinearLayout
                android:id="@+id/playback_controls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:id="@+id/song_lyrics_button"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/song_lyrics_asset"
                    android:layout_marginLeft="10dp"
                    android:clickable="true"/>

                <ImageView
                    android:id="@+id/skip_previous_button"
                    android:layout_width="35dp"
                    android:layout_height="50dp"
                    android:src="@drawable/skip_previous_asset"
                    android:layout_marginLeft="10dp" />

                <ImageView
                    android:id="@+id/seconds_backward_btn"
                    android:layout_width="35dp"
                    android:layout_height="50dp"
                    android:src="@drawable/seconds_back_asset"
                    android:layout_marginLeft="10dp" />

                <ImageButton
                    android:id="@+id/play_button"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/round_imagebtn_shape"
                    android:src="@drawable/play_button_asset"
                    android:layout_marginLeft="10dp" />

                <ImageView
                    android:id="@+id/seconds_forward_btn"
                    android:layout_width="35dp"
                    android:layout_height="50dp"
                    android:src="@drawable/seconds_forward_asset"
                    android:layout_marginLeft="10dp" />

                <ImageView
                    android:id="@+id/skip_next_button"
                    android:layout_width="35dp"
                    android:layout_height="50dp"
                    android:src="@drawable/skip_next_asset"
                    android:layout_marginLeft="10dp" />

                <ImageView
                    android:id="@+id/loop_song_button"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/song_loop_asset"
                    android:layout_marginLeft="10dp"
                     />
            </LinearLayout>
 <androidx.cardview.widget.CardView
    android:id="@+id/cvLyrics_Card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/black_shade"
    android:layout_marginTop="30dp"
     android:layout_marginBottom="50dp"
     app:cardElevation="24dp"
      app:cardCornerRadius="20dp"
    android:layout_gravity="center">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/song_lyrics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="italic"
                />
        </LinearLayout>
    </ScrollView>
</androidx.cardview.widget.CardView>


        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
