<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/changePswdMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ForgotPasswd"
        android:gravity="center_horizontal"
    android:background="@color/white"

        >
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationView"
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:lottie_rawRes="@raw/password_change"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"/>

        <androidx.cardview.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cvLoginCrd"
            app:cardElevation="24dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/white"
            android:layout_gravity="center"
            android:layout_margin="20dp">


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">


                <TextView
                    android:id="@+id/tvLoginTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Change Password"
                    android:gravity="center"
                    android:textSize="35sp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:fontFamily="@font/aclonica"/>



                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:text="New Password:"
                    android:textSize="15sp"
                    android:layout_marginStart="22dp"

                    android:layout_gravity="left"
                    android:textColor="@color/black_shade"
                    android:fontFamily="@font/alatsi"
                    />
                <EditText
                    android:id="@+id/etLoginUsername"
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:layout_margin="10dp"
                    android:hint="New Password"
                    android:drawableStart="@drawable/password_asset"
                    android:inputType="text"
                    android:background="@drawable/edt_bg_shape"
                    android:paddingStart="15dp"

                    />

                <TextView
                    android:id="@+id/tvLoginCheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:text="Rewrite Password:"
                    android:textSize="15sp"
                    android:layout_marginStart="22dp"

                    android:layout_gravity="left"
                    android:textColor="@color/black_shade"
                    android:fontFamily="@font/alatsi"
                    />

                <EditText
                    android:id="@+id/etLoginPswd"
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/edt_bg_shape"
                    android:drawableStart="@drawable/password_asset"
                    android:hint="Rewrite New Password"
                    android:inputType="text|textPassword"
                    android:paddingStart="15dp"

                    />



                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/etChangePswdBtn"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Change"
                    android:textColor="@color/white"
                    android:background="@drawable/login_btn_shape"
                    android:elevation="240dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"


                    />



            </LinearLayout>


        </androidx.cardview.widget.CardView>



    </LinearLayout>


