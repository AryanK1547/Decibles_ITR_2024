<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/aboutUsMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ForgotPasswd"
        android:gravity="center_horizontal"
    android:background="@color/white">
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".AboutUsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/about_us_logo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:src="@drawable/new_logo_8" />

        <TextView
            android:id="@+id/about_us_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About Decibels"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="@font/aclonica"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/about_us_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Decibels provides quality audio solutions, enhancing your listening experience with state-of-the-art technology and innovative designs."
            android:textSize="16sp"
            android:fontFamily="@font/aclonica"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/about_us_mission_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Our Mission"
            android:fontFamily="@font/aclonica"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/about_us_mission_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="At Decibels, our mission is to deliver the highest quality audio experiences, making advanced audio technology accessible to everyone."
            android:textSize="16sp"
            android:fontFamily="@font/aclonica"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/about_us_team_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Our Team"
            android:textSize="20sp"
            android:fontFamily="@font/aclonica"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/about_us_team_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Our team of audio experts and engineers is dedicated to pushing the boundaries of sound technology and ensuring that every product meets the highest standards."
            android:textSize="16sp"
            android:fontFamily="@font/aclonica"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/about_us_contact_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact Us"
            android:textSize="20sp"
            android:fontFamily="@font/aclonica"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/about_us_contact_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Feel free to reach out to us at contact@decibels.com for any inquiries or support."
            android:textSize="16sp"
            android:fontFamily="@font/aclonica"
            android:lineSpacingExtra="4dp"
            android:autoLink="email"
            android:layout_marginBottom="16dp" />



    </LinearLayout>
</ScrollView>
</LinearLayout>