<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProfileActivity"
    android:gravity="center"
    android:background="@drawable/splash_gradient_background"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cvLoginCrd"
        app:cardElevation="24dp"
        app:cardCornerRadius="20dp"
        app:cardBackgroundColor="@color/white"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:backgroundTint="@color/white"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="15sp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:gravity="center"
                    android:textSize="35sp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/red"
                    android:textStyle="bold"
                    android:fontFamily="@font/aclonica"/>
               <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    app:cardCornerRadius="55dp"
                    android:layout_gravity="center"
                    app:cardElevation="4dp"
                    android:layout_margin="8dp"
                    >

    <ImageView
        android:id="@+id/ivprofile_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/logo_main_round"
        />
</androidx.cardview.widget.CardView>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnLoginEditProfile"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Edit Profile"
                    android:textColor="@color/white"
                    android:background="@drawable/login_btn_shape"
                    android:elevation="240dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"/>

                <TextView
                    android:id="@+id/tvProfileFirstName"
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:layout_margin="10dp"
                    android:drawableStart="@drawable/username_asset"
                    android:drawablePadding="10sp"
                    android:text=""
                    android:textSize="17sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:fontFamily="@font/aclonica"
                    android:background="@drawable/edt_bg_shape"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:gravity="center_vertical"/>

                <TextView
                    android:id="@+id/tvProfileLastName"
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:layout_margin="10dp"
                    android:drawablePadding="10sp"
                    android:text=""
                    android:gravity="center_vertical"
                    android:drawableStart="@drawable/username_asset"
                    android:textSize="17sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:fontFamily="@font/aclonica"
                    android:background="@drawable/edt_bg_shape"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"/>

                <TextView
                    android:id="@+id/tvProfileEmail"
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:gravity="center_vertical"
                    android:layout_margin="10dp"
                    android:drawablePadding="10sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:fontFamily="@font/aclonica"
                    android:background="@drawable/edt_bg_shape"
                    android:drawableStart="@drawable/email_asset"
                    android:text=""

                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:textSize="17sp"/>

                <TextView
                    android:id="@+id/tvProfilePhone"
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:layout_margin="10dp"
                    android:drawablePadding="10sp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:fontFamily="@font/aclonica"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/edt_bg_shape"
                                        android:gravity="center_vertical"

                    android:drawableStart="@drawable/contact_asset"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:textSize="17sp"
                    android:maxLength="10"/>

                <TextView
                    android:id="@+id/tvProfileUsername"
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:layout_margin="10dp"
                    android:gravity="center_vertical"
                    android:drawablePadding="10sp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:fontFamily="@font/aclonica"
                    android:drawableStart="@drawable/username_asset"
                    android:textSize="17sp"
                    android:background="@drawable/edt_bg_shape"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"/>

                <TextView
                    android:id="@+id/tvProfilePswd"
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:layout_margin="10dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:fontFamily="@font/aclonica"
                    android:gravity="center_vertical"
                    android:textSize="17sp"
                    android:color="@color/black"
                    android:drawableStart="@drawable/password_asset"
                    android:background="@drawable/edt_bg_shape"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:drawablePadding="10sp"/>

                <TextView
                    android:id="@+id/tvProfileToken"
                    android:layout_width="match_parent"
                    android:layout_height="49dp"
                    android:layout_margin="10dp"
                    android:textIsSelectable="true"
                    android:textSize="17sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:fontFamily="@font/aclonica"
                    android:gravity="center_vertical"
                    android:drawableStart="@drawable/password_asset"
                    android:background="@drawable/edt_bg_shape"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:drawablePadding="10sp"
                    android:text=""/>
            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>
</LinearLayout>
