<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyApplication" parent="Theme.MaterialComponents.Light.NoActionBar">

    </style>

    <style name="Theme.MyApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar"/>

    <style name="Theme.MyApplication" parent="Base.Theme.MyApplication"/>


    <style name="Theme.ShowAction" parent="Theme.MyApp">
        <item name="android:textColorSecondary">@color/red</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/grey</item>
    </style>


    <style name="MyAlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="alertDialogTheme">@style/MyCustomAlertDialog</item>
    </style>

    <!-- Customize AlertDialog -->
    <style name="MyCustomAlertDialog" parent="Theme.MaterialComponents.Light.Dialog.FixedSize">
        <item name="colorPrimary">#6200EE</item>
        <item name="colorPrimaryDark">#3700B3</item>
        <item name="colorAccent">#03DAC5</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

</resources>